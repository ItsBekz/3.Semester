@page "/OneProduct"

<PageTitle>Product</PageTitle>

<div class="col-md-6 col-lg-4 col-xl-3 py-2">
    <div class="card h-100">
        <img class="card-img-top img-fluid" src="@imagePath" alt="Card image cap">
        <div class="card-block">
            <h4 class="card-title">@Summary</h4>
            <p class="card-text">@Date</p>
            <p claconss="card-text"><small class="text-muted">@TemperatureC</small></p>
        </div>
    </div>
</div>

@code {
    [Parameter]
    public DateTime Date { get; set; } = DateTime.Now;
    [Parameter]
    public int TemperatureC { get; set; } = 0;
    [Parameter]
    public string? Summary { get; set; } = "Summary";
    [Parameter]
    public string? imagePath { get; set; } = "Empty";




}
