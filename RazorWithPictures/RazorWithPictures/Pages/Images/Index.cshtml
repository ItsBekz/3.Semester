@page
@model RazorWithPictures.Pages.Images.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Image[0].imageTitle)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Image[0].imageData)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Image) {
            string imageDataURL = "";
            if(item.imageData != null)
            {
                string imageBase64Data = Convert.ToBase64String(item.imageData);
                imageDataURL = string.Format("data:image/jpg;base64,{0}", imageBase64Data);
            }
            <tr>
            <td>
                <p>@item.imageTitle</p>
            </td>
            <td>
                <img src="@imageDataURL" width="100"/>
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
